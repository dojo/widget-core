{
	"extends": "./node_modules/@dojo/scripts/intern/base.json",
	"capabilities+": {
		"name": "@dojo/widget-core"
	},
	"browser": {
		"loader": {
			"script": "./node_modules/@dojo/scripts/intern/loader.js",
			"options": {
				"packages": [
					{ "name": "src", "location": "dist/dev/src" },
					{ "name": "tests", "location": "dist/dev/tests" },
					{ "name": "cldr-data", "location": "node_modules/cldr-data" },
					{ "name": "cldrjs", "location": "node_modules/cldrjs" },
					{ "name": "globalize", "location": "node_modules/globalize", "main": "dist/globalize" }
				],
				"map": {
					"globalize": {
						"cldr": "cldrjs/dist/cldr",
						"cldr/event": "cldrjs/dist/cldr/event",
						"cldr/supplemental": "cldrjs/dist/cldr/supplemental",
						"cldr/unresolved": "cldrjs/dist/cldr/unresolved"
					}
				}
			}
		},
		"plugins": [
			{
				"script": "./node_modules/@dojo/shim/browser.js",
				"useLoader": true
			},
			{
				"script": "./tests/support/loadCustomElements.js",
				"useLoader": true
			}
		]
	},
	"node" : {
		"plugins": [
			{
				"script": "./dist/dev/tests/support/loadJsdom.js",
				"useLoader": true
			}
		]
	},
	"configs": {
		"browserstack+": {
			"environments": [
				{ "browserName": "edge" },
				{ "browserName": "internet explorer", "version": "11" },
				{ "browserName": "chrome", "platform": "WINDOWS" },
				{ "browserName": "firefox", "os": "Windows", "os_version": "10", "browser_version": "58.0" },
				{ "browserName": "safari", "version": "10", "platform": "MAC" },
				{ "browserName": "iPhone", "version": "9.1" }
			]
		},
		"saucelabs+": {
			"capabilities+": {
				"fixSessionCapabilities": false
			}
		}
	}
}
