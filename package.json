{
  "name": "@dojo/widget-core",
  "version": "0.11.1-pre",
  "description": "A core widget library for Dojo 2",
  "private": true,
  "homepage": "https://dojo.io",
  "bugs": {
    "url": "https://github.com/dojo/widget-core/issues"
  },
  "license": "BSD-3-Clause",
  "main": "main.js",
  "files": [
    "dist",
    "src",
    "typings.json"
  ],
  "engines": {
    "npm": ">=3.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/dojo/widget-core.git"
  },
  "scripts": {
    "benchmark": "./run-benchmark.sh",
    "prepublish": "dojo-install-peer-deps",
    "precommit": "lint-staged",
    "prettier": "prettier --write 'src/**/*.ts*' 'tests/**/*.ts*'",
    "test": "npm run build && intern",
    "test:local": "npm run build && intern config=intern.json@local",
    "test:browserstack": "npm run build && intern config=intern.json@browserstack",
    "lint": "tslint -p .",
    "build:umd": "tsc",
    "build:esm": "tsc -p tsconfig.esm.json",
    "build:static": "copyfiles \"src/**/*.d.ts\" \"tests/**/*.html\" dist/dev && copyfiles \"src/**/*.d.ts\" -u 1 dist/release",
    "build": "npm run build:umd && npm run build:esm && dojo-package && npm run build:static",
    "watch": "dojo-tsc-watcher -p tsconfig.json -p tsconfig.esm.json -- dojo-package && npm run build:static",
    "release": "dojo-can-publish-check && dojo-repo-is-clean-check && dojo-release",
    "uploadCoverage": "cat coverage.json | node_modules/.bin/codecov"
  },
  "peerDependencies": {
    "@dojo/core": "~0.5.0",
    "@dojo/has": "~0.1.1",
    "@dojo/i18n": "~0.6.0",
    "@dojo/shim": "~0.2.7"
  },
  "devDependencies": {
    "@dojo/loader": "~0.1.1",
    "@dojo/scripts": "~0.1.1",
    "@types/glob": "5.0.*",
    "@types/jsdom": "2.0.*",
    "@types/ramda": "^0.25.5",
    "@types/selenium-webdriver": "^3.0.8",
    "@types/sinon": "~4.1.2",
    "@types/yargs": "^8.0.2",
    "@webcomponents/webcomponentsjs": "1.1.0",
    "bootstrap": "^3.3.7",
    "chromedriver": "2.33.2",
    "codecov.io": "0.1.6",
    "copyfiles": "^1.2.0",
    "glob": "^7.0.6",
    "husky": "0.14.3",
    "intern": "~4.2.0",
    "jsdom": "^9.5.0",
    "jstat": "^1.7.1",
    "lint-staged": "6.0.0",
    "prettier": "1.9.2",
    "ramda": "^0.25.0",
    "selenium-webdriver": "3.6.0",
    "serve": "^6.4.1",
    "sinon": "~4.1.3",
    "tslint": "5.2.0",
    "typescript": "~2.6.1"
  },
  "dependencies": {
    "@types/web-animations-js": "2.2.5",
    "tslib": "~1.8.1"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "tabWidth": 4,
    "useTabs": true,
    "parser": "typescript",
    "printWidth": 120,
    "arrowParens": "always"
  }
}
